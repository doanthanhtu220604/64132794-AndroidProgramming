<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnMH1"
        android:layout_width="143dp"
        android:layout_height="93dp"
        android:layout_marginStart="36dp"

        android:layout_marginTop="84dp"
        android:text="Chức năng 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnMH2"
        android:layout_width="143dp"
        android:layout_height="93dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="36dp"
        android:text="Chức năng 3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnMH3"
        android:layout_width="143dp"
        android:layout_height="86dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="80dp"
        android:text="Chức năng 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMH1" />

    <Button
        android:id="@+id/btnMH4"
        android:layout_width="143dp"
        android:layout_height="86dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="36dp"
        android:text="About Me"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMH2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="232dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logonam" />

</androidx.constraintlayout.widget.ConstraintLayout>